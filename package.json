{
  "name": "cryptoboard-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "tsc && copyfiles ./src/**/*.graphql ./dist",
    "dev": "ts-node-dev --respawn --exit-child --watch ./src/**/*.schema.graphql --transpile-only src/index.ts --ignore-watch ./node_modules",
    "start:development": "ts-node src/index.ts --ignore-watch ./node_modules",
    "start:production": "export NODE_ENV=production && node dist/index.js --ignore-watch ./node_modules",
    "db:sync": "prisma migrate dev",
    "db:seed": "ts-node ./prisma/seed.ts",
    "db:truncate": "ts-node ./prisma/truncate.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.8",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.4.2",
    "eslint-plugin-import": "^2.26.0",
    "prisma": "^4.2.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@prisma/client": "^4.2.1",
    "body-parser": "^1.20.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "helmet": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "path": "^0.12.7",
    "youch": "^3.2.0"
  }
}
